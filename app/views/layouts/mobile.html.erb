<%= yield :script %>
<script type="text/javascript">
  function isPoneAvailable(str) {
      var myreg=/^[1][3,4,5,7,8][0-9]{9}$/;
      if (!myreg.test(str)) {
          return false;
      } else {
          return true;
      }
  }

  $(":submit").click(function(event) {
    event.preventDefault()
    if ($(this).closest('form').find("*[id*='_tel']").length == 0 ){
      $(this).closest('form').submit();
    }else{
      if (isPoneAvailable($(this).closest('form').find("*[id*='_tel']").eq(0).val())){
        $(this).closest('form').submit();
      }else{
        alert("请填写正确的11位手机号")
      }
    }
  });
</script>
