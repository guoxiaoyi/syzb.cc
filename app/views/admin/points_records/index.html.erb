<div class="x_panel">
  <div class="x_title">
    <h2>德分记录
      <small>
        <%= link_to "新增", new_admin_user_points_record_path(), class: 'btn btn-info btn-sm' %>
      </small>
    </h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th><%= PointsRecord.human_attribute_name(:user_id) %></th>
          <th><%= PointsRecord.human_attribute_name(:points) %></th>
          <th><%= PointsRecord.human_attribute_name(:title) %></th>
          <th><%= PointsRecord.human_attribute_name(:brief) %></th>
          <th>日期</th>
        </tr>
      </thead>

      <tbody>
        <% @points_records.each do |points_record| %>
          <tr>
            <td><%= points_record.user.name %></td>
            <td><%= points_record.points %></td>
            <td><%= points_record.title %></td>
            <td><%= points_record.brief %></td>
            <td><%= points_record.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to t('buttons.back'), admin_users_path, class: "btn btn-default" %>
