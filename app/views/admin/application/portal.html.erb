<div class="row">
  <div class="col-md-4 col-sm-4 ">
    <div class="x_panel tile">
      <div class="x_title">
        <h2>会员统计</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <% Vip.all.each do |vip|%>
          <div class="widget_summary">
            <div class="w_left w_25"> <span><%= vip.name -%></span> </div>
            <div class="w_center w_55">
              <div class="progress">
                <% user_count = current_manager.users.where(levels: vip.id).count == 0 ? 0 : current_manager.users.where(levels: vip.id).count %>
                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= user_count == 0 ? 0 : number_to_percentage(user_count/current_manager.users.count, precision: 2)%>;">
                  <span class="sr-only"></span>
                </div>
              </div>
            </div>
            <div class="w_right w_20">
              <span><%= current_manager.users.where(levels: vip.id).count%> 人</span>
            </div>
            <div class="clearfix"></div>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-6 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>近期活动</h2>

        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="">
          <ul class="to_do">
            <% current_manager.activities.order(start_time: :desc).limit(5).each do |activity|%>
            <li>
              <p>
                  <%= link_to [:admin, activity] do %>
                    <span style="margin-right: 5px">
                      已有 <%= activity.activity_records.count %>人参加
                    </span>
                    <%= activity.start_time.to_s %> 开始的 <%= activity.title%>
                  <% end -%>
              </p>
            </li>
            <% end -%>
          </ul>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-sm-12 ">
    <div class="x_panel">
      <div class="x_title">
        <h2>心得分享</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="dashboard-widget-content">
          <ul class="list-unstyled timeline widget">
            <% current_manager.notes.order(updated_at: :desc).each do |note|%>
            <li>
              <div class="block">
                <div class="block_content">
                  <h2 class="title"> <%= link_to note.title, [:admin, note] -%> </h2>
                  <div class="byline">
                    <span><%= cc_time(note.updated_at.to_i)%></span>  <a> <%= note.user.name%></a>
                  </div>
                  <p class="excerpt"> <%= note.content.truncate(100) unless note.content.blank?%></p>
                </div>
              </div>
            </li>
            <% end -%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>