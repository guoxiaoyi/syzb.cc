<%= simple_nested_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :discount %>
    <%= f.input :stock %>
    <%= if Gem::Specification.find_all_by_name('rails_kindeditor').length >= 1
      f.input :detail, :as => :kindeditor, :input_html => { :width => '100%', :height => 300 }
    else
      f.input :detail, as: :text, input_html: { width: '100%', rows: 20 }
    end
    %>

    <table class="table" id="product" >
    <%= f.fields_for :pictures, :wrapper => false do |f| %>
      <tr class="fields">
        <td> <%= image_tag f.object.url, width: "100" %></td>
        <td> <%= f.input :url, as: :file %></td>
        <td> <%= f.input :position, collection: [["封面",0],["轮播",1]], prompt: '图片类型'%></td>
        <td style="vertical-align: middle;padding-top: 30px;"> <%= f.link_to_remove "-" %></td>
      </tr>
    <% end %>
    </table>
    <%= f.link_to_add "添加图片", :pictures, :data => { :target => "#product" }, class: "btn btn-success",style: "margin-bottom:10px;" %>
    <%= f.input :online %>
    <%= f.input :categoryable_id, collection: ItemCategory.find_by(cite_key: 'product').children, required: true %>
    <%= f.input :customize_order %>
    <%= f.input :recommendation %>
  </div>
  <div class="ln_solid"></div>

  <div class="item form-group">
      <div class="col-md-6 col-sm-6 offset-md-3">
          <%= link_to t('buttons.back'), admin_products_path, class: 'btn btn-secondary' %>
          <%= f.button :submit, class: 'btn btn-success' %>
      </div>
  </div>
<% end %>
