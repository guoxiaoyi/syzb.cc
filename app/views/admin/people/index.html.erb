  <div class="x_title">
    <h2>个性咨询</h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
                  <th><%= Person.human_attribute_name(:name) %></th>
                  <th><%= Person.human_attribute_name(:nianji) %></th>
                  <th><%= Person.human_attribute_name(:city) %></th>
                  <th><%= Person.human_attribute_name(:email) %></th>
