<div class="x_panel">
  <div class="x_title">
    <h2>活动列表
      <small>
        <%= link_to "新增", new_admin_activity_path, class: 'btn btn-info btn-sm' %>
      </small>
    </h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th><%= Activity.human_attribute_name(:title) %></th>
          <th><%= Activity.human_attribute_name(:customize_order) %></th>
          <th><%= Activity.human_attribute_name(:start_time) %></th>
          <th><%= Activity.human_attribute_name(:location) %></th>
          <th><%= Activity.human_attribute_name(:description) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @activities.each_with_index do |activity, index| %>
          <tr>
            <td><%= index + 1%></td>
            <td><%= activity.title %></td>
            <td><%= activity.customize_order %></td>
            <td><%= activity.start_time %></td>
            <td><%= activity.location %></td>
            <td><%= activity.description %></td>
            <td>
              <%= link_to t('actions.show'), [:admin, activity] %>
              <%= link_to t('actions.edit'), edit_admin_activity_path(activity) %>
              <%= link_to t('actions.destroy'), [:admin, activity], method: :delete, data: { confirm: '你确定吗?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
