<%= simple_form_for([:admin, @note], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :recommendation %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' -%>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to t('buttons.back'), admin_notes_path, class: 'btn btn-default'-%>
  </div>
<% end %>
