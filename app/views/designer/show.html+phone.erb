<% content_for :title ,'设计团队' -%>
<header class="g-hd">
  <%= link_to root_path, class: "btnfanhui-page" do %>
    <span class="ico sprite"></span>
  <% end -%>
  <div class="btnMenu-page"><span class="ico sprite"></span></div>
  <strong>设计团队</strong>
  <%= link_to serach_index_path, class: "btnSearch-page" do %>
    <span class="ico sprite"></span>
  <% end -%>
</header>


<section class="g-body">
  <div class="design-pege">
    <span class="tx"><%= image_tag @designer.avatar %></span>
