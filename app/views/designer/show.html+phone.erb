      <% @designer.products.each do |c|%>
        <li>
          <%= link_to case_path("#{c.id}.html") do %>
            <%= image_tag c.product_pictures.where(pricture_type: 0).first.try(:path) -%>
            <p class="t1 f-toe"><%= c.title -%> </p>
            <p class="t2">设计师：<%= c.designer.name -%></p>
          <% end -%>
        </li>
      <% end -%>
    </ul>
  </div>
</section>
