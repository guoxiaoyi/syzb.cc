<h1>Listing donates</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donates.each do |donate| %>
      <tr>
        <td><%= donate.content %></td>
        <td><%= donate.user_id %></td>
        <td><%= donate.manager_id %></td>
        <td><%= link_to 'Show', donate %></td>
        <td><%= link_to 'Edit', edit_donate_path(donate) %></td>
        <td><%= link_to 'Destroy', donate, method: :delete, data: { confirm: '你确定吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donate', new_donate_path %>
