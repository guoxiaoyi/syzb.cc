<div class="x_panel">
  <div class="x_title">
    <h2>报道分类
      <small>
        <%= link_to "新增", new_admin_article_category_path, class: 'btn btn-info btn-sm' %>
      </small>
    </h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>类别名称</th>
          <th>自定义排序</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @article_categories.each do |article_category| %>
          <tr>
            <td><%= article_category.name -%></td>
            <td><%= article_category.custom_order -%></td>
            <td>
              <%= link_to '修改', edit_admin_article_category_path(article_category) %>
              <%= link_to '删除', [:admin, article_category], method: :delete, data: { confirm: '确定吗?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>





