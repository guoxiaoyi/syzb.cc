<%= simple_form_for([:admin, @page], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <label>电脑版内容</label>
    <%= if Gem::Specification.find_all_by_name('rails_kindeditor').length >= 1
          f.input :content, :as => :kindeditor, :label => false, :input_html => { :width => '100%', :height => 300 }
        else
          f.input :content, as: :text, input_html: { width: '100%', rows: 20 }
        end
    %>

    <%= f.input :published %>
    <%#= f.input :custom_order %>
    <%= f.input :cite_key, hint: '如果不清楚作用，请不要修改' %>
    <%= f.input :keywords %>
    <%= f.input :brief %>
    <%#= f.input :parent_id, collection: WizcmsArticle::Page.where.not(id: f.object.id),include_blank: true, prompt: "请选择类别"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
