<div class="x_panel">
  <div class="x_title">
    <h2>报道列表
      <small>
        <%= link_to "新增", new_admin_article_path, class: 'btn btn-info btn-sm' %>
      </small>
    </h2>
    <div class="clearfix"></div>
  </div>
  <div class="x_content">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= WizcmsArticle::Article.human_attribute_name(:article_category_id) %></th>
          <th><%= WizcmsArticle::Article.human_attribute_name(:title) %></th>
          <th><%= WizcmsArticle::Article.human_attribute_name(:author) %></th>
          <th><%= WizcmsArticle::Article.human_attribute_name(:published) %></th>
          <th><%= WizcmsArticle::Article.human_attribute_name(:updated_at) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.article_category.name %></td>
            <td><%= link_to article.title.truncate(35), [:admin, article] %></td>
            <td><%= article.author %></td>
            <td><%= article.published %></td>
            <td><%= article.updated_at %></td>
            <td>
              <%= link_to t('actions.edit'), edit_admin_article_path(article) %>
              <%= link_to t('actions.destroy'), [:admin, article], method: :delete, data: { confirm: '你确定吗?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @articles, theme: 'bootstrap3' %>
  </div>
</div>