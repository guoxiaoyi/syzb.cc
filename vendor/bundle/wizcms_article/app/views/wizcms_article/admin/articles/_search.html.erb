<%= simple_form_for @article_search, :url=> admin_articles_path, :method=>:get, :validate=>true do |f| %>

  <div class="form-inputs form-inline row">
    <%= f.input :title, wrapper_html:{ class: "col-md-6" }, label: '标题' %>
    <%#= f.input :article_category_id, wrapper_html:{ class: "col-md-3" }  %>
    <%= f.input :article_category_id, collection: WizcmsArticle::ArticleCategory.tree.unshift(WizcmsArticle::ArticleCategoryRoot.new), label_method: :tree_select_name, prompt: "请选择类别", wrapper_html:{ class: "col-md-6" }, label: "分类" -%>
    <div class="form-actions">
      <%= f.button :submit, value: t('buttons.search', default: '搜索') %>
      <%= link_to "全部", admin_articles_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
