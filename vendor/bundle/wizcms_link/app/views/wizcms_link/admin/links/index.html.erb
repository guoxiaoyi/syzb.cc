
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= WizcmsLink::Link.human_attribute_name(:title) %></th>
      <th><%= WizcmsLink::Link.human_attribute_name(:image) %></th>
      <th><%= WizcmsLink::Link.human_attribute_name(:published) %></th>
      <th><%= WizcmsLink::Link.human_attribute_name(:category_id) %></th>
      <th><%= WizcmsLink::Link.human_attribute_name(:cite_key) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.title, link.url %></td>
        <td><%= image_tag link.image, width: 100 %></td>
        <td><%= link.published ? "是" : "否" %></td>
        <td><%= link.category.try :name %></td>
        <td><%= link.cite_key %></td>
        <td>
          <%= link_to t('actions.show'), [:admin,link] %>
          <%= link_to t('actions.edit'), edit_admin_link_path(link) %>
          <%= link_to t('actions.destroy'), [:admin,link], method: :delete, data: { confirm: '你确定吗?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @links, theme: 'bootstrap3' %>

<br>

