<%= simple_form_for([:admin,@link], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url, hint: '如果不做任何连接则输入: #nogo' %>
    <%= f.input :image %>
    <%= f.input :published %>
    <%= f.input :custom_order %>
    <%= f.input :category_id, collection: WizcmsLink::Category.tree.unshift(WizcmsLink::CategoryRoot.new), label_method: :tree_select_name, prompt: "请选择类别" %>
    <%= f.input :cite_key, hint: '如果不清楚作用，请不要修改' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

