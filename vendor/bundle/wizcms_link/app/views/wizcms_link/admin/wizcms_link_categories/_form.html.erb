<%= simple_form_for([:admin_wizcms_link,@category], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :parent_id, collection: WizcmsLink::Category.tree.unshift(WizcmsLink::CategoryRoot.new), label_method: :tree_select_name, prompt: "请选择类别"  %>
    <%= f.input :published %>
    <%= f.input :cite_key, hint: '如果不清楚作用，请不要修改' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
