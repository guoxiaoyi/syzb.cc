<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= WizcmsLink::Category.human_attribute_name(:name) %></th>
      <th><%= WizcmsLink::Category.human_attribute_name(:parent_id) %></th>
      <th><%= WizcmsLink::Category.human_attribute_name(:published) %></th>
      <th><%= WizcmsLink::Category.human_attribute_name(:cite_key) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.parent_id %></td>
        <td><%= category.published %></td>
        <td><%= category.cite_key %></td>
        <td><%= link_to t('actions.edit'), edit_admin_wizcms_link_category_path(category) %>
        - <%= link_to t('actions.destroy'), admin_wizcms_link_category_path(category), method: :delete, data: { confirm: '你确定吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

